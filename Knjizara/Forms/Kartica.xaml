        xmlns:local="clr-namespace:Knjizara.Forms"
        mc:Ignorable="d"
        Title="Kartica" Height="203" Width="307">
    <Grid>
        <Label Content="Vrsta" HorizontalAlignment="Left" Margin="30,20,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtVrsta" HorizontalAlignment="Left" Margin="130,24,0,0"  TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>

        <Label Content="Popust" HorizontalAlignment="Left" Margin="30,65,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtPopust" HorizontalAlignment="Left" Margin="130,69,0,0"  TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>

        <Button x:Name="btnSacuvaj" Content="Sacuvaj" Width="75" HorizontalAlignment="Left" Margin="30,120,0,0" VerticalAlignment="Top" Click="btnSacuvaj_Click"/>
        <Button x:Name="btnOtkazi" Content="Otkazi" Width="75" HorizontalAlignment="Left" Margin="180,120,0,0" VerticalAlignment="Top" Click="btnOtkazi_Click"/>

    </Grid>
</Window>
