<Window x:Class="Knjizara.Forms.Racun"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Knjizara.Forms"
        mc:Ignorable="d"
        Title="Racun" Height="232" Width="321">
    <Grid>

        <Label Content="Clan" HorizontalAlignment="Left" Margin="88,46,0,0" VerticalAlignment="Top"/>
        <ComboBox  x:Name="cbxClan" HorizontalAlignment="Left" Margin="130,50,0,0" VerticalAlignment="Top" Width="120" DisplayMemberPath="Naziv" SelectedValuePath="ID" />
        <ComboBox  x:Name="cbxZaposleni" HorizontalAlignment="Left" Margin="130,82,0,0" VerticalAlignment="Top" Width="120" DisplayMemberPath="Naziv" SelectedValuePath="ID" />

        <Label Content="Zaposleni" HorizontalAlignment="Left" Margin="60,78,0,0" VerticalAlignment="Top"/>


        <Button x:Name="btnSacuvaj" Content="Sacuvaj" Width="75" HorizontalAlignment="Left" Margin="46,150,0,0" VerticalAlignment="Top" Click="btnSacuvaj_Click"/>
        <Button x:Name="btnOtkazi" Content="Otkazi" Width="75" HorizontalAlignment="Left" Margin="190,150,0,0" VerticalAlignment="Top" Click="btnOtkazi_Click"/>

    </Grid>
</Window>
